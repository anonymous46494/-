.page {
  width: 100%;
}

.fruit,
.plant {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 50rpx 0;
}

.fruit image,
.plant image {
  opacity: 0.9;
  width: 96%;
  height: 400rpx;
  border-radius: 10rpx;
}

.float{
  position: relative;
  height: 60rpx;
  width: 96%;
  color: #000;
  opacity: 0.8;
  font-size: 40rpx;
  line-height: 60rpx;
  background-color: rgb(211, 211, 211);
  margin-top: -60rpx;
  border-radius: 0  0  10rpx 10rpx;
}

