.header {
  display: flex;
  flex-direction: column;
  padding: 10rpx 20rpx;
  align-items: center;
  background: #3DBC6D;
  justify-content: center;
  font-size: 36rpx;
  color: #FFF;
}


.search {
  height: 70rpx;
  width: 100%;
  background: rgb(245, 245, 245);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}

.search_ico {
  width: 50rpx;
  height: 50rpx;
  margin: 0 10rpx;
}

.clear {
  width: 70rpx;
  height: 70rpx;
  padding: 0 10rpx;
}

input {
  padding: 10rpx;
  font-size: 35rpx;
  color: #888;
  flex: 1;
}

.search .clear {
  padding: 10rpx;
}

.tip {
  margin: 20rpx 0 10rpx 0;
  font-size: 29rpx;
}

.tip2 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 29rpx;
}


.banner {
  position: sticky;
  top: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
  white-space: nowrap;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  z-index: 10;
}

.banner scroll-view {
  display: flex;
  justify-content: space-between;
  height: 100%;
}

.sort {
  position: relative;
  display: inline-block;
  font-size: 32rpx;
  line-height: 80rpx;
  height: 100%;
  width: 100rpx;
  margin: 0 20rpx;
}

.sort .text {
  text-align: center;
}

scroll-view .sort:last-child {
  margin-right: 0rpx;
}

.choose {
  color: #16BA98;
}

.line {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 5rpx;
  border-radius: 10rpx;
  background: #16BA98;
  animation: spread .3s;
}

@keyframes spread {
  0% {
    width: 0;
    left: 50%;
  }

  100% {
    width: 100%;
    left: 0;
  }
}


.content {
  width: 100%;
}

.content swiper {
  width: 100%;
}

.content .box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.content .count {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}


.content .count .item {
  width: 100%;
  margin: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 35rpx;
  line-height: 60rpx;
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content .count .input {
  flex: 2;
  border-radius: 10rpx;
  box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
  height: 60rpx;
  text-align: center;
  vertical-align:middle;
  font-size: 35rpx;
}


.content .count .button #button1 {
  width: 40%;
  margin: 30rpx 0;
  margin-left: 10px;
  float: left;
}
.content .count .button #button2 {
  width: 40%; 
  margin: 30rpx 0;
  margin-right:10px;
  float:right;
}

.content .count .count_text {
  box-shadow: rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
  border-radius: 10rpx;
  background-color: #fff;
  margin: 20rpx;
  text-align: center;
}

.content .count .left,
.content .count .right {
  flex: 1;
  text-align: center;
}


.items {
  width: 100%;
  margin: 20rpx;
}

.items .item {
  display: flex;
  justify-content: left;
  width: 100%;
  border-radius: 20rpx;
  box-sizing: border-box;
  transition: box-shadow .5s;
  box-shadow: 17rpx 5rpx 17rpx rgba(10,16,20,.24),17rpx 5rpx 17rpx rgba(10,16,20,.12);
}

.items .item_hover{
  box-shadow: 0 8px 8px rgba(10,16,20,.12),0 0 8px rgba(10,16,20,1);
  border: #eee 1rpx solid;
  text-decoration: none;
}

.items .item image {
  width: 230rpx;
  height: 150rpx;
  border-radius: 20rpx;
}
.items .item .info {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.items .item .info text:first-child{
  font-weight: bold;
  margin-left: 150rpx;
}
.items .item .info text:nth-child(2){
  margin-left: 20rpx;
  white-space: nowrap; 
  display:inline;
  width: 450rpx; 
  font-size: 29rpx;
  white-space:nowrap;
  height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis; 
}


.waring {
  position: fixed;
  bottom: 0;
  color: #6d6d6d;
  background-color: #fff;
  padding: 10rpx 20rpx;
  text-align: center;
  font-size: 28rpx;
}

.waring image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  margin-top: 2rpx;
}

.waring text {
  width: 80%;
  margin: 0;
  padding: 0;
  line-height: 33rpx;
  vertical-align: top;

}