
.cont {
  position: relative;
  margin: 20rpx auto;
  box-shadow: 0 0 1rpx rgb(0,153,184) inset,0 0 15rpx rgb(0,153,184);
  width: 90%;
  height: 60vh;
}

.cont_animation {
  position: relative;
  margin: 20rpx auto;
  box-shadow: 0 0 1rpx rgb(0,153,184) inset,0 0 15rpx rgb(0,153,184);
  width: 300rpx;
  height: 300rpx;
  transition-property: height, width; 
  transition-duration:1s;
  transition-timing-function:ease-in;
}

.meng {
  background-image:
    linear-gradient(0deg,
      transparent 24%,
      rgba(32, 255, 77, 0.1) 25%,
      rgba(32, 255, 77, 0.1) 26%,
      transparent 27%,
      transparent 74%,
      rgba(32, 255, 77, 0.1) 75%,
      rgba(32, 255, 77, 0.1) 76%,
      transparent 77%,
      transparent),
    linear-gradient(90deg,
      transparent 24%,
      rgba(32, 255, 77, 0.1) 25%,
      rgba(32, 255, 77, 0.1) 26%,
      transparent 27%,
      transparent 74%,
      rgba(32, 255, 77, 0.1) 75%,
      rgba(32, 255, 77, 0.1) 76%,
      transparent 77%,
      transparent);
  background-size: 3rem 3rem;
  background-position: -1rem -1rem;
  width: 100%;
  height: 100%;
}

.mengban {
  width: 100%;
  height: 100%;
  animation-name: change;
  animation-duration: 2s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  position: absolute;
  background-image:
    linear-gradient(0deg,
      transparent 24%,
      rgba(32, 255, 77, 0.1) 25%,
      rgba(32, 255, 77, 0.1) 26%,
      transparent 27%,
      transparent 74%,
      rgba(32, 255, 77, 0.1) 75%,
      rgba(32, 255, 77, 0.1) 76%,
      transparent 77%,
      transparent),
    linear-gradient(90deg,
      transparent 24%,
      rgba(32, 255, 77, 0.1) 25%,
      rgba(32, 255, 77, 0.1) 26%,
      transparent 27%,
      transparent 74%,
      rgba(32, 255, 77, 0.1) 75%,
      rgba(32, 255, 77, 0.1) 76%,
      transparent 77%,
      transparent);
  background-size: -3rem -3rem;
  background-position: -1rem -1rem;
  background: linear-gradient(180deg, rgba(0, 255, 51, 0) 43%, #00ff33 211%);
  border-bottom: 3px solid #00ff33;

}


.items{
  margin: 20rpx;

}

.item,.not-item{
  display: flex;
  padding: 10rpx;
  align-items: center;
  border-radius: 30rpx;
  height: 200rpx;
  background-color: #fff;
  box-shadow: 0 0 1rpx rgb(0,153,184) inset,0 0 15rpx rgb(0,153,184);
  transition-property: height, width; 
  transition-duration:0.5s;
  transition-timing-function:ease-in;
}
.not-item{
  height: 180rpx;
}



.item image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 30rpx;
}
.not-item image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 30rpx;
}


.right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 10rpx;
  height: 160rpx;
}

.right .a{
  font-weight: bold;
  font-size: 40rpx;
}

.real{
  display: flex;
  justify-content: center;
  width: 100%;
  margin: 100rpx 0;
  font-weight: bold;
  color: red;
  
}

.two{
  margin: 0 20rpx;
  box-shadow: 0 0 1rpx rgb(0,153,184) inset,0 0 15rpx rgb(0,153,184);
  margin-top: -10rpx;
}
.text{
  display: block;
  padding: 20rpx;
  box-shadow: 0 0 1rpx rgb(0,153,184) inset,0 0 15rpx rgb(0,153,184);
  line-height:1.6em;
}

.bottom {
  display: flex;
  justify-content: center;

}

.bottom button {
  position: absolute;
  bottom: 200rpx;
}

.img {
  width: 100%;
  height: 100%;
}

@keyframes change {
  from {
    opacity: 0.1
  }

  50% {
    height: 0vh;
    opacity: 1;

  }

  to {
    opacity: 0.1
  }
}

@keyframes radar-beam {
  0% {
    transform: translateY(-100%);
  }

  100% {
    transform: translateY(0);
  }
}