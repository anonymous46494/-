.banner {
  position: sticky;
  top: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
  white-space: nowrap;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  z-index: 10;
}

.banner scroll-view {
  display: flex;
  justify-content: space-between;
  height: 100%;
}

.sort {
  position: relative;
  display: inline-block;
  font-size: 32rpx;
  line-height: 80rpx;
  height: 100%;
  width: 200rpx;
  margin: 0 20rpx;
}

.sort .text {
  text-align: center;
}

scroll-view .sort:last-child {
  margin-right: 0rpx;
}

.choose {
  color: #16BA98;
}

.line {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 5rpx;
  border-radius: 10rpx;
  background: #16BA98;
  animation: spread .3s;
}

@keyframes spread {
  0% {
    width: 0;
    left: 50%;
  }

  100% {
    width: 100%;
    left: 0;
  }
}

.page{
  background-color: #f2f2f2;
  padding: 1rpx 0;
}

.cont{
  margin:0 20rpx;
  background-color: #fff;
  border-radius: 30rpx;
  margin-top: -5rpx;
}

.items{
  margin: 20rpx;

}

.item{
  padding: 20rpx 0;
  border-bottom: solid 1rpx rgba(242, 242, 242, 0.555);
}


.item .title{
  display: block;
  font-weight: bold;
  font-size: 35rpx;
}

.item .img{
  display: flex;
  justify-content: space-between;

}

.item image{
  margin: 10rpx 0;
  flex: 1;
  height: 140rpx;
  border-radius: 20rpx;
}

.item image:nth-child(1){
  margin-right: 10rpx;
}

.item image:nth-child(2){
  margin-right: 10rpx;
}

.item .info{
  color: #666;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between
}