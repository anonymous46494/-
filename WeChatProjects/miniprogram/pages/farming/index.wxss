
.content {
  background-color: #FFF;
}

.content .cont1,
.content .cont2,
.content .cont3,
.content .cont4 {
  margin: 30rpx 20rpx;
}

.content .cont1 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 95%;
  margin-top: 50rpx;
}

.cont1 .time {
  width: 100%;
  height: 80rpx;
  background-color: rgba(242, 242, 242, 0.555);
  border-radius: 80rpx;
  display: flex;
  align-items: center;
  margin: 20rpx 0 0;
}

.cont1 .time .choice {
  display: flex;
  width: 100%;
  height: 80rpx;
  justify-content: space-between;
  align-items: center;
}

.cont1 .time .text {
  display: flex;
  width: 30%;
  margin-left: 30rpx;
}

.cont1 .time picker {
  width: 60%;

}

.cont1 .time .picker image {
  width: 50rpx;
  height: 50rpx;
}

.cont1 .time .picker .direction {
  width: 30%;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cont1 .period {
  background-color: rgba(242, 242, 242, 0.555);
  margin: 20rpx 0;
  height: 80rpx;
  border-radius: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cont1 .period .text {
  display: flex;
  width: 30%;
  margin-left: 30rpx;
}

.cont1 .period .picker {
  display: flex;
  width: 100%;
  margin-right: 30rpx;
  justify-content: space-between;
}

.cont1 .period .picker .direction {
  width: 25%;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.picker .a {
  color: #666;
  /* font-size: 30rpx; */
  /* margin-right: 30rpx; */
}


.content .cont2 {
  display: flex;
  flex-direction: column;
}

.button_container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  font-size: 35rpx;
}


/* 按钮未选中 */
.normal_button {
  width: 200rpx;
  height: 60rpx;
  background: rgba(242, 242, 242, 0.555);
  margin: 20rpx 0;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
}

/* 按钮选中 */
.checked_button {
  width: 200rpx;
  height: 60rpx;
  background: rgb(172, 226, 135);
  color: white;
  margin: 20rpx 0;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
}

.line {
  border: 1rpx solid rgba(242, 242, 242, 0.555);
}

.title {
  display: block;
  font-weight: bold;
  margin: 20rpx 0;
}


.cont3 .items {
  display: flex;
  justify-content: left;
  align-items: center;
  flex-wrap: wrap;

}

.cont3 .items .item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 10rpx;
  border: solid 1rpx #dbdbdb;
}

.cont3 view .add_image {
  width: 100%;
  height: 100%;

}

.cont3 view .add_no {
  width: 100rpx;
  height: 100rpx;
}

.cont4 textarea {
  padding: 20rpx;
  font-size: 30rpx;
  height: 150rpx;
  width: 95%;
  color: #666;
  border-radius: 10rpx;
  background-color: rgba(242, 242, 242, 0.555);

}

.content .button {
  width: 80% !important;
  height: 70rpx;
  background-color: #3DBC6D;
  border-radius: 50rpx;
  margin: 30rpx auto;
  text-align: center;
  color: #fff;
  line-height: 70rpx;
}