.page{
  margin: 20rpx;
}

.top {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.top .title {
  font-weight: bold;
  margin-top: 5rpx ;
}

.top .down  {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
  margin-top: 15rpx;
  font-size: smaller;
}

.top .down .right{
  display: flex;
  align-items: center;
}

.top .down .right image{
  width: 60rpx;
  height: 60rpx;
}

.show{
  padding: 20rpx;
  margin-top:15rpx ;
  background-color: rgb(245, 245, 245);
  box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
}

.item image{
  width: 100%;
  height: 400rpx;
  margin: 20rpx auto;
}
.item .p1{
  font-weight: bold;
  margin-top: 20rpx;
}
.info{
  text-indent: 2em;
  line-height:1.6em;
  margin-top: 15rpx;
}