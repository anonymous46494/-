.top image {
    width: 100%;
    height: 400rpx;
    opacity: 0.8;
}

.inside {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 20rpx;
    width: 80%;
    margin: 0 auto;
    border-radius: 20rpx;
    background-color: rgb(252, 247, 247);
    position: relative;
    top: -100rpx;

}

.inside .left{
    display: flex;
}


.inside .left image{
    border-radius: 20rpx;
    width: 150rpx;
    height: 150rpx;
    margin-right: 20rpx;
}

.inside .left .a{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.inside .left view text:nth-child(1){
    font-weight:bold;
}

.inside .left view text:nth-child(2){
    color: #666;
}


.inside .follow{
    width: 130rpx;
    height: 60rpx;
    border-radius: 15rpx;
    border: solid rgb(212, 212, 212) 1rpx;
    line-height:60rpx;
    text-align:center;
}


.banner {
    position: sticky;
    top: 0;
    width: 100%;
    height: 80rpx;
    background: #fff;
    white-space: nowrap;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #f5f5f5;
    border-bottom: 1rpx solid #f5f5f5;
    z-index: 10;
    margin-top: -80rpx;
}

.banner scroll-view {
    display: flex;
    justify-content: space-between;
    height: 100%;
}

.sort {
    position: relative;
    display: inline-block;
    font-size: 32rpx;
    line-height: 80rpx;
    height: 100%;
    width: 100rpx;
    margin: 0 20rpx;
}

.sort .text {
    text-align: center;
}

scroll-view .sort:last-child {
    margin-right: 0rpx;
}

.choose {
    color: #16BA98;
}

.line {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 5rpx;
    border-radius: 10rpx;
    background: #16BA98;
    animation: spread .3s;
}

.content {
    margin: 10rpx;
}

.content .items {
    border-radius: 20rpx;
    padding: 10rpx;
    margin: 20rpx 0;
    box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
}

.content .items_hover {
    box-shadow: -17rpx 5rpx 17rpx rgba(10, 16, 20, .24), 17rpx 5rpx 17rpx rgba(10, 16, 20, .12);
}

.content .item {
    margin: 20rpx 0;
    border-radius: 20rpx;
}


.content .item .bar {
    display: flex;
    margin: 10rpx 0;
}

.content .item .bar image {
    width: 80rpx;
    height: 80rpx;
    margin-right: 40rpx;
    border-radius: 50%;
}

.content .item .bar .img {
    width: 80rpx;
    height: 80rpx;
    margin-right: 40rpx;
    border-radius: 50%;
}

.content .item .title {
    line-height:1.6em;
    margin-left: 35rpx;
}

.content .item .img {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    border-radius: 20rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    margin-bottom: 20rpx;
}

.content .item .img image {
    border-radius: 20rpx;
    width: 300rpx;
    height: 300rpx;
    margin: 10rpx;
}

@keyframes spread {
    0% {
        width: 0;
        left: 50%;
    }

    100% {
        width: 100%;
        left: 0;
    }
}