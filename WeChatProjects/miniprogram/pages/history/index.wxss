.items{
  display: flex;
  box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;
  border-radius: 30rpx;
  margin: 40rpx 20rpx;
}
.item{
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.item .left{
  display: flex;
  margin: 10rpx 0;
}

.item .left image{
  margin: auto 10rpx;
  width: 280rpx;
  height: 170rpx;
  border-radius: 30rpx;
}

.item .left .info{
  display: flex;
  flex-direction: column;
  width: 300rpx;
  justify-content:space-between;
}

.item .left .info .a{
  font-size: 40rpx;
}

.item .clas{
  width: 150rpx;
  height: 50rpx;
  display: flex;
  font-weight: bold;
  border-radius: 0 30rpx  0 0;
  justify-content: center;
  background-color: rgb(250, 127, 45);
}
.item .clas text{
  font-size: 30rpx;
}